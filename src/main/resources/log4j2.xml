<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="pattern">%cyan{[%d{HH:mm:ss}]} %highlight{[%-5.5level]} %green{[%-20.20thread]} %highlight{[%-25.25c{1.}]: %msg%n}</Property>
    </Properties>
    <Appenders>
        <TerminalConsole name="Console">
            <PatternLayout pattern="${sys:pattern}" disableAnsi="false"/>
        </TerminalConsole>
        <RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${sys:pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Logger name="io.netty" level="info" />
        <Logger name="me.minidigger" level="trace" />
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
